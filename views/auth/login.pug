extends ../layouts/common
block content
    h2 Login:
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method='POST')
        .form-group
            label(for="name") Email :
            input#name.form-control(type= 'text', name='email', placeholder='Enter email', value=values ? values.email : '')
        .form-group
            label(for='phone') Password :
            input#phone.form-control(type= 'password', name='password', placeholder='Enter password',  value=values ? values.password : '')
        button.btn.btn-primary Submit