extends ../layouts/common
block content
    h2 Creat user:
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action='/users/create', method='POST')
        .form-group
            label(for="name") Name :
            input#name.form-control(type= 'text', name='name', placeholder='Enter name', value=values ? values.name : '')
        .form-group
            label(for='phone') Phone :
            input#phone.form-control(type= 'text', name='phone', placeholder='Enter phone',  value=values ? values.phone : '')
        button.btn.btn-primary Submit